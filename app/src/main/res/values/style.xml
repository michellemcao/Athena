<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default text appearance -->
    <style name="NavigationMenuTextStyle">
        <item name="android:textSize">16sp</item> <!-- Default size -->
    </style>

    <!-- Selected text appearance (larger font size) -->
    <style name="NavigationMenuTextStyleSelected">
        <item name="android:textSize">20sp</item> <!-- Larger size -->
        <item name="android:textColor">#FF1493</item> <!-- Optional: change text color to pink for selected item -->
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#ff1493</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/purple_200</item>
    </style>
    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:textColorPrimary">@color/teal_200</item>
    </style>
</resources>